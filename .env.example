# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# Node Environment
NODE_ENV=production
PORT=8080
NEXT_TELEMETRY_DISABLED=1

# Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_STABLE_MODE_MODEL=gemini-3-pro-preview
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key-here
NEXT_PUBLIC_GEMINI_STABLE_MODE_MODEL=gemini-3-pro-preview

# Model Preference Settings
USE_GEMINI_ONLY=true
NEXT_PUBLIC_USE_GEMINI_ONLY=true
PRIMARY_MODEL=gemini
NEXT_PUBLIC_PRIMARY_MODEL=gemini

# Azure OpenAI Configuration
# Get these from your Azure OpenAI resource in Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# Client-side Azure OpenAI access
NEXT_PUBLIC_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
NEXT_PUBLIC_AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
NEXT_PUBLIC_AZURE_OPENAI_API_VERSION=2024-12-01-preview
NEXT_PUBLIC_AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# Azure DALL-E Configuration
AZURE_DALLE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DALLE_API_KEY=your-azure-dalle-api-key-here

# Model Deployments
GPT_4_1_DEPLOYMENT=gpt-4.1
GPT_5_MINI_DEPLOYMENT=gpt-5-mini
GPT_4O_DEPLOYMENT=gpt-4o-2024-11-20
NEXT_PUBLIC_GPT_4_1_DEPLOYMENT=gpt-4.1
NEXT_PUBLIC_GPT_5_MINI_DEPLOYMENT=gpt-5-mini
NEXT_PUBLIC_GPT_4O_DEPLOYMENT=gpt-4o-2024-11-20

