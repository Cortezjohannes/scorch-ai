# env files (can opt-in for committing if needed)
.env*
# NEVER commit these - they contain secrets
.env.local
.env.production
.env.development
.env.build
.env.docker
.env.phase2
.env.yaml
.env.local.bak
# BUT DO commit .env.example and template files
!.env.example
!.env*.template
!.env.template

# Deployment files with secrets (use .template versions instead)
service.yaml
deploy-production.sh

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts
# Ignore Python bytecode files
**/*.pyc
**/__pycache__/

